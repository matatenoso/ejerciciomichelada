<div class="page-header" align="center">
	<h3> <%= nombre%> Marca</h3>
</div>
<%= form_for(@marca, html: {class: "form-horizontal"}) do |f| %>
	<div class="form-group">
		<label class="control-label col-sm-1" for="nombre">Nombre:</label>
		<div class="col-sm-5">
			<%= f.text_field :nombre, placeholder: "Nombre de la marca", class: "form-control"%>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12" align="right">
      		<%= f.submit "Guardar", class:"btn btn-primary"%>
      		<%= link_to "Volver", { :controller => :marcas, :action => :index }, class:"btn btn-primary"%>
      	</div>
    </div>
    <div class="form-group">
    	<div class="col-sm-12">
		    <% @marca.errors.full_messages.each do |message|%>
				<div class="alert alert-danger">
				  <strong>Â¡Error!</strong> <%= message%>
				</div>
		    <%end%>
		</div>
	</div>
<%end%>